<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:background="@drawable/foodal540"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true">

            <com.example.myapplication.Outline
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="FAF"
                android:textColor="@color/white"
                android:textSize="60dp"
                android:textStyle="bold|italic"
                app:textStroke="true"
                app:textStrokeColor="@color/black"
                app:textStrokeWidth="6.0" />
            <com.example.myapplication.Outline
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Food Aallergy Find"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                app:textStroke="true"
                app:textStrokeColor="@color/black"
                app:textStrokeWidth="6.0" />
            <com.example.myapplication.Outline
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="음식 검색 앱에 오신걸 환영합니다~"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                app:textStroke="true"
                app:textStrokeColor="@color/white"
                app:textStrokeWidth="6.0" />

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/L2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/L1"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/sick2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@drawable/sick3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <com.example.myapplication.Outline
        android:id="@+id/L3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/L2"
        android:gravity="center"
        android:text="알레르기 증상 걱정마세요!"
        android:textColor="#FFFF00"
        android:textSize="30dp"
        android:textStyle="normal|italic"
        app:textStroke="true"
        app:textStrokeColor="#990000"
        app:textStrokeWidth="10.0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/L3"
            android:layout_marginBottom="3dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/button_round"
                android:fontFamily="@font/kotra"
                android:text="▷  기본 음식 추천!  ◁"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_round"
                android:fontFamily="@font/kotra"
                android:text="▷ 알레르기 거르고 음식 추천! ◁"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

</RelativeLayout>